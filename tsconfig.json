{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext","DOM"],
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    // We must allow 'no unused parameters' to support parent classes
    // that don't use all of their fields.
    // "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  },

  // temporarily ignore everything in components/, resources/
  "exclude": ["components", "resources"]
}